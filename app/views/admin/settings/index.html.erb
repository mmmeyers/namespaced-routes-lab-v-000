<%= form_for @preference, :url => admin_settings_path(@preference) do |f| %>

  <%= f.label :song_sort_order, "ASC" %>
  <%= f.radio_button :song_sort_order, 'ASC' %> <br>

  <%= f.label :song_sort_order, "DESC" %>
  <%= f.radio_button :song_sort_order, 'DESC' %> <br>

  <%= f.label :artist_sort_order, "ASC" %>
  <%= f.radio_button :artist_sort_order, 'ASC' %><br>
  
  <%= f.label :artist_sort_order, "DESC" %>
  <%= f.radio_button :artist_sort_order, 'DESC' %><br>

  <%= f.submit %>
<% end %>